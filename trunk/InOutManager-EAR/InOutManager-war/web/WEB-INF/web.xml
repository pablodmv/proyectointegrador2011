<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/pages/ingresoHorarios.xhtml</welcome-file>
    </welcome-file-list>
    <ejb-ref>
        <ejb-ref-name>marca</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.inout.ejb.marcaLocal</remote>
        <ejb-link>marca</ejb-link>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>persona</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.inout.ejb.personaLocal</remote>
        <ejb-link>persona</ejb-link>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>tarjeta</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.inout.ejb.tarjetaLocal</remote>
        <ejb-link>tarjeta</ejb-link>
    </ejb-ref>
     <ejb-ref>
        <ejb-ref-name>horarios</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.inout.ejb.horariosLocal</remote>
        <ejb-link>horarios</ejb-link>
    </ejb-ref>
</web-app>
